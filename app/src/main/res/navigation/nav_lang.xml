<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ChartFragment">

    <fragment
        android:id="@+id/ChartFragment"
        android:name="com.brandonwong.langassignment.ui.ChartFragment"
        android:label="@string/chart_fragment_label"
        tools:layout="@layout/fragment_chart">

        <action
            android:id="@+id/action_ChartFragment_to_DetailFragment"
            app:destination="@id/DetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/DetailFragment"
        android:name="com.brandonwong.langassignment.ui.DetailFragment"
        android:label="@string/detail_fragment_label"
        tools:layout="@layout/fragment_detail">
    </fragment>

</navigation>